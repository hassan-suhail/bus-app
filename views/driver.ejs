<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Driver Dashboard</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Stop</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.name %></td>
                    <td><%= student.stop %></td>
                    <td><%= student.status %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
